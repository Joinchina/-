.main {
  padding-top: 80rpx;
  text-align: center;
}

.main .title {
  font-size: 40rpx;
  font-family: Hiragino Sans GB;
  font-weight: 600;
  line-height: 60rpx;
  color: #333;
  opacity: 1;
}

.main .check-bg {
  margin-top: 80rpx;
  width: 70%;
}

.main .footTip {
  margin: 24rpx 21%;
  font-size: 28rpx;
  font-family: Hiragino Sans GB;
  font-weight: normal;
  line-height: 36rpx;
  color: #333;
  opacity: 1;
}

.modalBox {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  text-align: center;
}

.modalBox .background {
  position: absolute;
  background: #222;
  opacity: 0.88;
  width: 100%;
  height: 100%;
}

.modalBox .loginModal {
  width: 80%;
  background: #fff;
  opacity: 1;
  height: 712rpx;
  margin: auto;
  position: relative;
  top: 20%;
  border-radius: 20rpx;
  padding: 48rpx;
}

.modalBox .title {
  font-size: 36rpx;
  font-family: Hiragino Sans GB;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
  opacity: 1;
  font-weight: 600;
}

.modalBox .formTitle {
  padding: 32rpx 0rpx 16rpx 0rpx;
  text-align: left;
  font-size: 36rpx;
  font-family: Hiragino Sans GB;
  font-weight: normal;
  line-height: 54rpx;
  color: #222;
  opacity: 0.9;
}

.modalBox .getCodeBtn {
  width: 45%;
  height: 88rpx;
  margin-right: 0rpx;
  font-size: 36rpx;
  font-family: Hiragino Sans GB;
  font-weight: normal;
  line-height: 88rpx;
  color: #f5833d;
  opacity: 0.9;
  padding: 0rpx;
  margin-left: 16rpx;
}

.modalBox .tip {
  padding-top: 16rpx;
  text-align: left;
  font-size: 24rpx;
  font-family: Hiragino Sans GB;
  font-weight: normal;
  line-height: 32rpx;
  color: #333;
  opacity: 1;
}
.modalBox .tip a{
  color: #418DC7
}


